.lead-module
  horizonatally-centered()
  height 1247px
  padding-top 15px
  display flex
  justify-content: space-between;
  .column
    &-left
      width 685px
      &--item
        min-height 400px
        width 100%
        margin-bottom: 15px
      &--pic
        background-size: cover
      &--pic1
        background-image url("img/bilder.jpg")
      &--pic2
        background-image url("img/duck.jpg");
        margin-bottom: 0 !important
      &--teaser
        border 1px solid #50c5e0
        .teaser-title
          title-style()
          font-size: 25px
        .teaser-border
          teaser-border()
        .teaser-content
          width 90%
          margin 0 auto
          color #71869c
          font-size: 17px
          font-family: Comforta
        .teaser-info
          width 90%
          height 20px
          margin 0 auto
          display flex
          justify-content: space-between;
          padding: 15px 0 15px 0
          a
            color #50c5e0
            text-decoration: none;
            font-size 15px
            text-transform: uppercase;
            font-family: Comforta
            font-weight: lighter
            transition all .2s ease-in-out
          a:hover
            color #71869c
          a.read-more
            color #71869c
          a.read-more:hover
            color #50c5e0
      &-teaser:after
        content: '';
        position: absolute;
        top: -15px;
        left: 65px;
        bottom: 0px;
        right: 0;
        width: 0;
        height: 0;
        border-style: solid;
        border-width: 0 10px 15px 10px;
        border-color: transparent transparent rgba(80,197,224,0.8) transparent;
    &-right
      width 300px
      overflow-y: scroll;
      margin-bottom: 15px
      &--small-item
        .small-pic
          height 100px
          background-size cover
          margin-bottom: 15px
        .small-pic1
          background-image: url('img/eyes.jpg');
        .small-pic2
          background-image: url('img/duck.jpg');
        .small-title
          margin-bottom: 15px
          hovered-text()
      &--big-item
        .big-pic
          height 150px
          background-size: cover
          margin-bottom: 15px
        .big-pic1
          background-image: url(img/man.jpg);
        .big-title
          margin-bottom: 15px
          hovered-text()
      &--teaser2
        border 1px solid #50c5e0
        margin-bottom: 15px
        .teaser2-title
          title-style()
          font-size: 16px
        .teaser2-border
          teaser-border()
        .teaser2-content
          width 90%
          margin 0 auto
          color #71869c
          font-size: 16px
          font-family: Comforta
          font-weight: lighter
        .teaser2-info
          width 90%
          height 20px
          margin 0 auto
          display flex
          justify-content: space-between;
          padding: 15px 0 15px 0
          a
            color #50c5e0
            text-decoration: none;
            font-size 10px
            text-transform: uppercase;
            font-family: Comforta
            font-weight: lighter
            transition all .2s ease-in-out
          a:hover
            color #71869c
          a.read-more
            color #71869c
          a.read-more:hover
            color #50c5e0


